[*.cs]
# Flag unused using directives as errors
dotnet_diagnostic.IDE0005.severity = error
dotnet_diagnostic.CS1591.severity = none
# Using directive should appear within a namespace declaration (SA1200)
dotnet_diagnostic.SA1200.severity = none
# error RSPEC-125: Remove this commented out code.
dotnet_diagnostic.S125.severity = none
# Collection initialization can be simplified IDE0300
dotnet_diagnostic.IDE0300.severity = error

# Using directives should be ordered alphabetically
dotnet_diagnostic.IDE0055.severity = error
dotnet_diagnostic.IDE0065.severity = error
csharp_using_directive_placement = outside_namespace:error
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false

# Require newline at end of file
insert_final_newline = true

# Prefer primary constructors - but as suggestion, not error
dotnet_diagnostic.IDE0290.severity = suggestion

# Style preference for primary constructors - only when they make sense
csharp_style_prefer_primary_constructors = true:suggestion

# Do not require space before open bracket - StyleCop rules
dotnet_diagnostic.SA1009.severity = none
dotnet_diagnostic.SA1000.severity = none
dotnet_diagnostic.SA1026.severity = none

# C# formatting style options - space before brackets
csharp_space_before_open_square_brackets = false
csharp_space_between_square_brackets = false
csharp_space_before_brackets = false
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_between_parentheses = false
csharp_space_around_binary_operators = before_and_after
