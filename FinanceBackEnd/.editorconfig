[*.cs]
# Flag unused using directives as errors
dotnet_diagnostic.IDE0005.severity = error
dotnet_diagnostic.CS1591.severity = none
# Using directive should appear within a namespace declaration (SA1200)
dotnet_diagnostic.SA1200.severity = none
# error RSPEC-125: Remove this commented out code.
dotnet_diagnostic.S125.severity = none
# Using directive should appear within a namespace declaration (SA1200)
dotnet_diagnostic.SA1200.severity = none
# Collection initialization can be simplified IDE0300
dotnet_diagnostic.IDE0300.severity = error

# Require newline at end of file
insert_final_newline = true

# Prefer primary constructors - but as suggestion, not error
dotnet_diagnostic.IDE0290.severity = suggestion

# Style preference for primary constructors - only when they make sense
csharp_style_prefer_primary_constructors = true:suggestion
